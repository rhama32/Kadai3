
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <h2>User Info</h2>
   <%= image_tag @user.get_profile_image(100,100) %>
   <table class="table">
    <th>name</th>
     <th><%= @user.name %></th>
     </table>
    <th>introduction</th>
     <th><%= @user.introduction %></th>
     <%= link_to "Edit", edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block"%>
    <div class="row">

    </div>
    <h2>New Book</h2>
    <%= form_with model: @book do |f| %>
    <div class="form-group">
    <h4>Title</h4>
    <%= f.text_field :title %>

    <div class="form-group">
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    </div>
    </div>
    <div class="form-group">
    <%= f.submit 'Create Book', class: "btn btn-success" %>
    <% end %>
    </div>
   </div>
   <div class="col-md-8 offset-md-1">
   <h2>Books</h2>
   <% @books.each do |book| %>
   <th>Title</th>
   <th>Opinion</th>

   <%= link_to book.title, book_path(book.id) %>
   <p><%= book.body %></p>
   <th colspan="3"></th>
   <% end %>


  </div>
 </div>
</div>

  <div class="container mt-5">
   <div class="row">
    <div class="mx-auto">
     <p>CopyRight Infratop.inc</p>
    </div>
   </div>
  </div>
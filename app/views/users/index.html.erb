<div class="container px-5 px-sm-0">
  <div class= "row">
    <div class= "col-md-3">
      <h1>User info</h1>
      
      <h3>name</h3>

      <h1>New Book</h1>
      <!-- form_with部分 -->
      <%= form_with model: Book.new do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>

        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
    <div class= "col-md-8 offset-md-1">
      <h1>Users</h1>
      <h4>name</h4>
      <% @users.each do |user| %>
      <p><%= user.name %></p>
      <%= link_to "Show", user_path(user.id) %>
      <% end %>
    </div>
  </div>
</div>






<h1>User Info</h1>
<h1>New Book</h1>
<!-- form_with部分 -->
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<h1>Book detail</h1>
<%= link_to book_path(@book.id) do %>
<%= @book.title %>
<% end %>
<p><%= @book.body %></p>
<% if @book.user == current_user %>
<%= link_to "Edit", edit_book_path(@book.id) %>
<%= link_to "Destroy", books_path(@book.id) %>
<% end %>
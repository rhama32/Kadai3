<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
  <h2>User Info</h2>
  <%= image_tag current_user.get_profile_image(100,100) %>
   <table class="table">
    <th>name</th>
    <th><%= current_user.name %></th>
    </table>
    <th>introduction</th>

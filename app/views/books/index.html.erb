    <label for="book_opinion">Opinion</label>
    <%= f.text_area :body %>
    </div>
    <div class="form-group"></div>
    </div>
    <div class="col-md-8 offset-md-1"></div>
    <%= f.submit 'Create Book', class: "btn btn-success" %>
    <% end %>
    </div>
   </div>


